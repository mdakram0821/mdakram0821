//Write a program to accept the value of year as input from the keyword & print whether it is a leap year or not
#include <stdio.h>
void main()
{
    int year;
    printf("Enter year:");
    scanf("%d",&year);
if(year%4==0)
    {
        printf("It is a leap year \n");
    }
    else
    {
        printf("It is not a leap year \n");
    }
}

